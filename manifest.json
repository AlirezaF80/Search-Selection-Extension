{
  "manifest_version": 3,
  "name": "Search Selection Extension",
  "version": "1.0",
  "description": "Right-click selected text to search on customizable sites.",
  "permissions": ["contextMenus", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 